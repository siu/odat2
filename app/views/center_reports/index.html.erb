<%= page_title _('Informes de Centro') -%>

<% content_for :sidebar do -%>
<%= note(_('Aquí se muestran los informes de centro almacenados.')) %>
<% end -%>

<p><%= link_to _('Nuevo Informe de Centro'), new_center_report_path, :class => 'btn new-btn' %></p>

<% if @center_reports.any? -%>
<table class="vdata">
  <thead>
    <tr>
      <th><%= _('Título') %></th>
      <th width="25%"><%= _('Fecha de creación') %></th>
      <th><%= _('Informe') %></th>
      <th><%= _('Eliminar') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render(:partial => 'center_report', :collection => @center_reports) %>
  </tbody>
</table>
<% else -%>
  <%= display_no_records_message %>
<% end -%>

<%= will_paginate @center_reports %>
