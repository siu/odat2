<% content_for :header do -%>
	  <div id="usrbar">
	    <%= render :partial => 'users/user_bar' %>
	  </div>

	  <div id="header">
	    <%= render :partial => 'layouts/header' %>
	  </div>

	  <div id="navbar">
	    <%= render :partial => 'layouts/user_navbar' %>
	  </div>
<% end -%>

<% content_for :content do -%>
	  <div id="sidebar">
	    <%= yield :sidebar %>
	    <%= yield :menu %>
	  </div>

	  <div id="main">
	    <h2><%= yield :page_title || _('ODAT') %></h2>
	    <%= display_flash %>
	    <%= yield %>
	  </div>
<% end -%>

<%= render :file => 'layouts/default' %>
