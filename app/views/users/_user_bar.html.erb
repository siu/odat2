<% if logged_in? -%>
  <%= link_to_current_user :content_method => :login %>
  [ 
    <%= link_to _('Editar'), edit_user_path(current_user) %> / 
    <%= link_to _('Cerrar Sesión'), logout_path, 
    { :title => _('Cerrar Sesión') } %> ]
<% else -%>
  <%= _('No se ha iniciado sesión') %>
  [ 
  <%= link_to _('Iniciar Sesión'),  login_path,  
    { :title => _('Iniciar Sesión') } %> /
    <%= link_to _('Registro'), signup_path, 
    { :title => _('Registrar usuario') } %> ]
<% end -%>
