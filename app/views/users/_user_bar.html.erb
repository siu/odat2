<% if logged_in? -%>
    <%= current_user.name_or_login %> 
    <%= link_to _('Cerrar Sesión'), logout_path, 
  	{ :title => _('Cerrar Sesión'), :class => 'logout' } %>
<% else -%>
    <%= _('No se ha iniciado sesión') %>
  | <%= link_to _('Iniciar Sesión'),  login_path,  
    { :title => _('Iniciar Sesión') } %>
<% end -%>
