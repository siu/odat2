<% page_title(_('Listado de informes para %{full_name}') % {:full_name => @medical_record.full_name }) -%>

<% content_for(:sidebar) do -%>
<% end -%>

<% unless @medical_record.individual_reports.empty? -%>
  <table class="vdata">
    <thead>
      <tr>
        <th><%= _('Fecha') %></th>
        <th><%= _('Acciones') %></th>
      </tr>
    </thead>
    <tbody>
  <% for report in @medical_record.individual_reports do -%>
      <tr>
        <td>
          <%= link_to(l(report.created_at, :format => :short), 
              individual_report_path(report)) %>
        </td>
        <td>
          <%= link_to(_('Ver'), individual_report_path(report)) %>
          <%= link_to(_('Editar'), edit_individual_report_path(report)) %>
          <%= button_to(_('Borrar informe'), 
              individual_report_path(report), :method => :delete, 
              :confirm => _("Â¿Estas seguro de borrar este informe permanentemente?"), 
              :class => 'dest-action') %>
        </td>
  </tr>
  <% end -%>
</tbody>
</table>
<% else -%>
  <p><%= _('No hay informes almacenados.') %></p>
<% end -%>

<%= link_to(_('Nuevo informe individual'), new_medical_record_individual_report_path) %>
