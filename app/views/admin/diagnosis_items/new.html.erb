<h1>New diagnosis_item</h1>

<% form_for([:admin, @diagnosis_item]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :parent_id %><br />
    <%= f.collection_select(:parent_id, DiagnosisItem.find(:all), :id, :name, {:include_blank => true}) %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_diagnosis_items_path %>
