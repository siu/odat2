<% page_title(_('Iniciar sesión')) -%>

<% form_for @user_session, :url => user_session_path do |form| -%>
  <%= form.error_messages(:header_message => _('No se ha podido iniciar sesión'), :message => nil) %>

  <p><%= form.label(:login, _('Identificador de usuario')) %><br />
   <%= form.text_field(:login) %></p>

  <p><%= form.label(:password, _('Clave')) %><br/>
   <%= form.password_field(:password) %></p>

  <p><%= form.check_box(:remember_me) %> 
   <%= form.label(:remember_me, _('Recordarme')) %>
  </p>

  <p><%= form.submit(_('Iniciar sesión')) %></p>

<% end -%>

